{
  "index_patterns" : ["study_centric*"],
  "priority" : 1,
  "template": {
    "settings" : {
      "number_of_shards" : 5,
      "analysis": {
        "normalizer": {
          "custom_normalizer": {
            "type": "custom",
            "char_filter": [],
            "filter": "lowercase"
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "attribution": {
          "type": "keyword"
        },
        "biospecimen_count": {
          "type": "long"
        },
        "controlled_access": {
          "type": "keyword"
        },
        "data_category": {
          "type": "keyword"
        },
        "domain": {
          "type": "keyword"
        },
        "experimental_strategy": {
          "type": "keyword"
        },
        "external_id": {
          "type": "keyword",
          "normalizer": "custom_normalizer"
        },
        "family_count": {
          "type": "long"
        },
        "family_data": {
          "type": "boolean"
        },
        "fhir_id": {
          "type": "keyword"
        },
        "file_count": {
          "type": "long"
        },
        "participant_count": {
          "type": "long"
        },
        "program": {
          "type": "keyword"
        },
        "release_id": {
          "type": "keyword"
        },
        "search_text": {
          "type": "keyword",
          "normalizer": "custom_normalizer"
        },
        "status": {
          "type": "keyword"
        },
        "study_code": {
          "type": "keyword"
        },
        "study_id": {
          "type": "keyword"
        },
        "study_name": {
          "type": "keyword"
        },
        "version": {
          "type": "keyword"
        },
        "website": {
          "type": "keyword"
        }
      }
    }
  }
}